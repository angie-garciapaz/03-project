<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                <div class="container">

                    <h2>Portfolio</h2>
                    <form action="/admin/<% if (editing) { %>edit-work<% } else { %>add-work<% } %>" method="POST">
                        <div class="form-group">
                            <label for="title">Title</label>
                            <input type="text" name="title" id="title" class="form-control"
                                value="<% if (editing) { %><%= work.title %><% } %>">
                        </div>

                        <div class="form-group">
                            <label for="imageUrl">Image URL</label>
                            <input type="text" name="imageUrl" id="imageUrl" class="form-control"
                                value="<% if (editing) { %><%= work.imageUrl %><% } %>">
                        </div>

                        <div class="form-group">
                            <label for="description">Description</label>
                            <input type="text" name="description" id="description" class="form-control"
                                value="<% if (editing) { %><%= work.description %><% } %>">
                        </div>

                        <div class="form-group">
                            <label for="links">Link to Work</label>
                            <input type="text" name="links" id="links" class="form-control"
                                value="<% if (editing) { %><%= work.links %><% } %>">
                        </div>

                        <div class="form-group">
                            <label for="price">Price Range</label>
                            <input type="number" name="price" id="price" class="form-control"
                                value="<% if (editing) { %><%= work.price %><% } %>">
                        </div>

                        <% if (editing) { %>
                            <input type="hidden" value="<%= work.id %>" name="workId">
                        <% } %>
            

                        <button class="btn btn-blue" type="submit">
                            <% if (editing) { %>Update<% } else { %>Add<% } %>
                        </button>
                    </form>
                </div>
            </main>
            <%- include('../includes/end.ejs') %>