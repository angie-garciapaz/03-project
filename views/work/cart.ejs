<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
            <main>
                <div class="container">
                    <div class="row mt-4 mb-5 d-flex align-items-center">
                        <div class="col">
                            <div>
                                <h3 class="font-weight-bold">Your Cart </h3>
                            </div>


                            <div class="mt-3 table">
                                <% if (works.length> 0){ %>

                                    <table class="border-top-0 m-0 w-100">
                                        <thead>
                                            <th>Name</th>
                                            <th>Qty</th>
                                            <th>Price</th>
                                            <th></th>
                                        </thead>
                                        <% works.forEach( w=> { %>
                                            <tbody>

                                                <tr>
                                                    <td>
                                                        <%= w.workData.title %>
                                                    </td>
                                                    <td>
                                                        <%= w.qty %>
                                                    </td>
                                                    <td>
                                                        <%= w.workData.price %>
                                                    </td>
                                                    <td>
                                                        <form action="/cart-delete-item" method="POST">
                                                            <input type="hidden" value="<%= w.workData.id %>"
                                                                name="workId">
                                                            <button class="btn text-right" type="submit"><i
                                                                    class="fas fa-times"></i></button>
                                                        </form>
                                                    </td>
                                                </tr>

                                            </tbody>

                                            <% })%>
                                    </table>

                                    <hr>

                                    <% for(var i=0; i<works.length; i++) {%>

                                        <h5>Total: <%= i +=works.totalPrice %>
                                        </h5>

                                        <button class="btn-blue btn">Checkout</butÃŸton>
                                        <% }%>

                                            <% } else { %>
                                                <div class="">
                                                    <p><i class="fas fa-shopping-cart fa-3x"></i></p>
                                                    <h1>Your cart is empty</h1>
                                                    <p>Looks like you haven't added anything yet... let's change
                                                        that
                                                    </p>
                                                    <button class="btn add-to-cart-btn">Add Work</button>
                                                    <% } %>
                                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </main>
            <%- include('../includes/end.ejs') %>